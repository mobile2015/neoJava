package hello;

import java.util.HashSet;
import java.util.Set;

import org.neo4j.graphdb.Direction;
import org.springframework.data.neo4j.annotation.Fetch;
import org.springframework.data.neo4j.annotation.GraphId;
import org.springframework.data.neo4j.annotation.RelatedTo;

@NodeEntity
public class GroupUsers {
	
	@GraphId Long id;
    public String name;

    public GroupUsers() {}
    public GroupUsers(String name) 
    { 
    	this.name = name; 
    }

    @RelatedTo(type="Group", direction=Direction.INCOMING)
    public @Fetch Set<Person> teammates;

    public void isMemberOf(Person person) {
        if (teammates == null) {
            teammates = new HashSet<Person>();
        }
        teammates.add(person);
    }

    public String toString() {
        String results = name + "'s teammates include\n";
        if (teammates != null) {
            for (Person person : teammates) {
                results += "\t- " + person.name + "\n";
            }
        }
        return results;
    }
}
